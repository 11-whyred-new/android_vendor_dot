<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GalleryBase" parent="@*android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@*android:color/white</item>
        <item name="android:colorPrimaryDark">#ffeeeeee</item>
		<item name="android:statusBarColor">#ffeeeeee</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
		<item name="android:windowLightStatusBar">true</item>
    </style>

	<style name="ActionBarMenuItem" parent="@android:style/TextAppearance.Material.Widget.PopupMenu.Small">
        <item name="android:colorBackground">@*android:color/white</item>
        <item name="android:textColor">#ff535353</item>
		<item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
	
	<!-- RRemix -->
	<style name="ActionBarTitle" parent="@*android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
		<item name="android:textColor">#ff535353</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
